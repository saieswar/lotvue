<div class="container" style="width: 400px">
<p id="notice"><%= notice %></p>
<center>
<h1>Hide Roles</h1>
<%#= link_to '', new_role_path , class: 'btn btn-primary pull-right'%>
<table class="table table-condensed">
  <thead >
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <%if @roles.present? %>
   <%= form_tag('/hide_roles_update') do |f| %>
    
    <% @roles.each do |role| %>
      <tr>
       
        <td><%= role.id%></td>
        <td><%= role.role_name %></td>
        <td> <%= check_box_tag 'roles[]', role.id %></td>
        <%#= link_to 'Edit', edit_role_path(role) %>
        <!-- <td><%#= link_to 'Show', role %></td>
        <td><%#= link_to 'Edit', edit_role_path(role) %></td>
        <td><%#= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        
      </tr>


    <% end %>
    <%= submit_tag 'hide', class: 'btn btn-primary pull-right'%>
    <% end %>
    <% else %>
     <b> No active users to hide </b>
    <% end %>
  </tbody>
</table>

<br>

</center>
</div>